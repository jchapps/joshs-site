---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="text-primary">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-white dark:text-white dark:bg-primary">
    <section class="h-screen overflow-hidden relative">
      <div class="bg-repeat w-full h-full">
        <div class="m-auto w-3/5 h-screen flex flex-col overflow-auto">
          <Header />
          <div class="grid grid-cols-2 max-laptop:grid-cols-1 gap-x-5">
            <slot />
          </div>
          <Footer />
        </div>
      </div>
    </section>
  </body>
</html>
