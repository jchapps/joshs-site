---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="text-primary">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-white dark:text-white dark:bg-primary">
    <section class="h-screen overflow-hidden relative">
      <div class="bg-repeat w-full h-full">
        <div class="m-auto w-3/5 h-screen flex flex-col overflow-auto">
          <Header />
          <slot />
          <Footer />
        </div>
      </div>
    </section>
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "Poppins";
    src: url("/poppins-regular.ttf") format("woff");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  html {
    font-size: 12px;
    font-family: "Poppins", sans-serif;
  }
</style>
